
# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=europe-west1
GCP_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Google Cloud Tasks Configuration
GCP_TASKS_QUEUE_NAME=ia-processing-queue
IA_PROCESSING_SERVICE_URL=https://your-project-id-europe-west1.run.app/api/ia/process

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# IA Conversation Configuration
MAX_CONVERSATION_MESSAGES=10

# FFmpeg Configuration
FFMPEG_THREADS=4
FFMPEG_TIMEOUT=300000

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# Worker Pool and Auto-scaling Configuration
MAX_WORKERS=100
WORKER_POOL_SIZE=50
AUTO_SCALING_ENABLED=true
MAX_CONCURRENT_JOBS=1000
WORKER_MEMORY_LIMIT=512MB
WORKER_CPU_LIMIT=0.5

# Performance Tuning
JOB_PROCESSING_INTERVAL=1000
LOAD_MONITORING_INTERVAL=5000
PERFORMANCE_STATS_INTERVAL=60000
MAX_JOB_RETRIES=3
JOB_TIMEOUT_MS=4000 