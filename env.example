# Configuration Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Configuration du service
HOWPASS_SERVICE_URL=http://localhost:3001
PORT=3001

# Configuration Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Configuration OpenAI (optionnel)
OPENAI_API_KEY=your_openai_api_key

# Configuration des fichiers
TEMP_PATH=./temp

# Configuration FFmpeg
FFMPEG_TIMEOUT=300000
FFMPEG_THREADS=4

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration de sécurité
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100 

# AI Processing Configuration
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Worker Pool and Auto-scaling Configuration
MAX_WORKERS=100
WORKER_POOL_SIZE=50
AUTO_SCALING_ENABLED=true
MAX_CONCURRENT_JOBS=1000
WORKER_MEMORY_LIMIT=512MB
WORKER_CPU_LIMIT=0.5

# Performance Tuning
JOB_PROCESSING_INTERVAL=1000
LOAD_MONITORING_INTERVAL=5000
PERFORMANCE_STATS_INTERVAL=60000
MAX_JOB_RETRIES=3
JOB_TIMEOUT_MS=4000 